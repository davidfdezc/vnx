<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE vnx SYSTEM "/usr/share/xml/vnx/vnx-1.92.dtd">

<!--

Simple scenario
Just one Windows XP virtual machine. Use this specification for testing

-->

<vnx>
  <global>
    <version>1.92</version>
    <scenario_name>simple_w7</scenario_name>
    <automac offset="8"/>
    <vm_mgmt type="none" />
    <vm_defaults exec_mode="mconsole">
    </vm_defaults>
  </global>
    
  <net name="Net0" mode="virtual_bridge" />
  
  <!-- NODES -->
  <vm name="win7" type="libvirt" subtype="kvm" os="windows">
    <filesystem type="cow">/usr/share/vnx/filesystems/root_fs_win7</filesystem>
    <mem>1G</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.8/24</ipv4>
    </if>
    <filetree seq="notepad" root="c:\temp1">/home/jrodriguez/entregable</filetree>
    <exec seq="notepad" type="verbatim">notepad c:\temp1\cosa.txt</exec>
  </vm>

  <host>
    <hostif net="Net0">
       <ipv4>10.0.0.1/24</ipv4>
    </hostif>
  </host>
  
</vnx>
