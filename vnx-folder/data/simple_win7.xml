<?xml version="1.0" encoding="UTF-8"?>

<!--

Simple scenario
Just one Windows XP virtual machine. Use this specification for testing

-->

<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
     xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-1.96.xsd">
  <global>
    <version>1.92</version>
    <scenario_name>simple_w7</scenario_name>
    <automac offset="8"/>
    <vm_mgmt type="none" />
    <vm_defaults exec_mode="mconsole">
    </vm_defaults>
  </global>
    
  <net name="Net0" mode="virtual_bridge" />
  
  <!-- NODES -->
  <vm name="win7" type="libvirt" subtype="kvm" os="windows">
    <filesystem type="cow">/usr/share/vnx/filesystems/root_fs_win7</filesystem>
    <mem>1G</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.8/24</ipv4>
    </if>
    <filetree seq="vnxtxt" root="c:\temp">conf/txtfile</filetree>
    <filetree seq="vnxwww" root="c:\temp">conf/txtfile</filetree>
    <exec seq="vnxtxt" type="verbatim" mode="system">start /max notepad c:\temp\vnx.txt</exec>
    <exec seq="vnxwww" type="verbatim" mode="system">start /max c:\temp\vnx.html</exec>
    <exec seq="calc" type="verbatim" mode="system">calc.exe</exec>
  </vm>

  <host>
    <hostif net="Net0">
       <ipv4>10.0.0.1/24</ipv4>
    </hostif>
  </host>
  
</vnx>
