<?xml version="1.0" encoding="UTF-8"?>

<!--

Simple scenario
Just one Ubuntu virtual machine. Use this specification for testing

-->
<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-1.95.xsd">
  <global>
    <version>1.92</version>
    <scenario_name>simple_fedora-gui</scenario_name>
    <automac offset="10"/>
    <vm_mgmt type="none" />
    <vm_defaults>
	    <console id="0" display="yes"/>
	    <console id="1" display="yes"/>
    </vm_defaults>
  </global>
    
  <net name="Net0" mode="virtual_bridge" />
  
  <!-- NODES -->
  <vm name="fedora-gui" type="libvirt" subtype="kvm" os="linux">
    <filesystem type="cow">/usr/share/vnx/filesystems/root_fs_fedora-gui</filesystem>
    <mem>256M</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.10/24</ipv4>
    </if>
    <filetree seq="copyfile" root="/tmp">conf/txtfile</filetree>
    <filetree seq="start-www" root="/var/www/html">conf/txtfile</filetree>
    <exec seq="movefile" type="verbatim" mode="system">mv /tmp/vnx.txt /root/</exec>
    <exec seq="start-www" type="verbatim" mode="system">chmod 644 /var/www/html/*</exec>
    <exec seq="start-www" type="verbatim" mode="system">service httpd start</exec>
    <exec seq="stop-www" type="verbatim" mode="system">service httpd stop</exec>
  </vm>

  <host>
    <hostif net="Net0">
       <ipv4>10.0.0.1/24</ipv4>
    </hostif>
  </host>
  
</vnx>