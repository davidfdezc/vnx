<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE vnx SYSTEM "/usr/share/xml/vnx/vnx-1.92.dtd">

<!--

Simple scenario
Just one Windows XP virtual machine. Use this specification for testing

-->

<vnx>
  <global>
    <version>1.92</version>
    <scenario_name>simple_xp</scenario_name>
    <automac offset="1"/>
    <vm_mgmt type="none" />
    <vm_defaults exec_mode="mconsole">
    </vm_defaults>
  </global>
  
  <net name="Net0" mode="virtual_bridge" />
    
  <!-- NODES -->
  <vm name="winxp" type="libvirt" subtype="kvm" os="windows">
    <filesystem type="cow">/usr/share/vnx/filesystems/root_fs_winxp</filesystem>
    <mem>512M</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.2</ipv4>
    </if>
  </vm>

</vnx>
