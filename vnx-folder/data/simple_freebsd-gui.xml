<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE vnx SYSTEM "/usr/share/xml/vnx/vnx-1.92.dtd">

<!--

Simple scenario
Just one FreeBSD virtual machine. Use this specification for testing

-->

<vnx>
  <global>
    <version>1.92</version>
    <scenario_name>simple_freebsd</scenario_name>
    <automac offset="5"/>
    <vm_mgmt type="none" />
  </global>
    
  <net name="Net0" mode="virtual_bridge" />
      
  <!-- NODES -->
  <vm name="freebsd" type="libvirt" subtype="kvm" os="linux">
    <filesystem type="cow">/usr/share/vnx/filesystems/root_fs_freebsd-gui</filesystem>
    <mem>256M</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.5</ipv4>
    </if>
    <filetree seq="vnxtxt" root="/tmp">conf/txtfile</filetree>
    <exec seq="vnxtxt" type="verbatim" mode="processn">gedit /tmp/vnx.txt</exec>
    <exec seq="vnxtxt2" type="verbatim" mode="system">'sleep 5; wmctrl -r vnx.txt -b add,maximized_vert,maximized_horz'</exec>
    <exec seq="showlog" type="verbatim" mode="system">tail -f /var/log/vnxdaemon.log</exec>
  </vm>

</vnx>