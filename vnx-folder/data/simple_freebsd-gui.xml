<?xml version="1.0" encoding="UTF-8"?>

<!--

Simple scenario
Just one FreeBSD virtual machine. Use this specification for testing

-->

<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
     xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-1.95.xsd">
  <global>
    <version>1.92</version>
    <scenario_name>simple_freebsd-gui</scenario_name>
    <automac offset="7"/>
    <vm_mgmt type="none" />
  </global>
    
  <net name="Net0" mode="virtual_bridge" />
      
  <!-- NODES -->
  <vm name="freebsd-gui" type="libvirt" subtype="kvm" os="linux">
    <filesystem type="cow">/usr/share/vnx/filesystems/root_fs_freebsd-gui</filesystem>
    <mem>256M</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.7/24</ipv4>
    </if>
    <filetree seq="vnxtxt" root="/tmp">conf/txtfile</filetree>
    <exec seq="vnxtxt" type="verbatim" mode="system">gedit /tmp/vnx.txt</exec>
    <exec seq="vnxtxt2" type="verbatim" mode="system">'sleep 5; wmctrl -r vnx.txt -b add,maximized_vert,maximized_horz'</exec>
    <exec seq="showlog" type="verbatim" mode="system">tail -f /var/log/vnxdaemon.log</exec>
  </vm>

  <host>
    <hostif net="Net0">
       <ipv4>10.0.0.1/24</ipv4>
    </hostif>
  </host>
  
</vnx>