<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE vnx SYSTEM "/usr/share/xml/vnx/vnx-1.92.dtd">

<!--

Simple simulation
Just one Ubuntu virtual machine. Use this specification for testing

-->

<vnx>
  <global>
    <version>1.92</version>
    <simulation_name>simple_ubuntu</simulation_name>
    <automac offset="2"/>
    <vm_mgmt type="none" />
  </global>
    
  <net name="Net0" mode="virtual_bridge" />
  
  <!-- NODES -->
  <vm name="ubuntu" type="libvirt" subtype="kvm" os="linux">
    <filesystem type="cow">/usr/share/vnx/filesystems/root_fs_ubuntu</filesystem>
    <mem>256M</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.3</ipv4>
    </if>
  </vm>

</vnx>
