<!--

~~~~~~~~~~~~~~~~~~~~
VNX Sample scenarios
~~~~~~~~~~~~~~~~~~~~

Name:        simple_olive
Description: Just one Olive router connected to a Network named Net0 with address 10.0.0.13. 
             The host has an interface in Net0 with address 10.0.0.1  
             This simple scenario is supposed to be used for testing the different 
             types of virtual machines supported by VNX. You can start several simple_*.xml
             scenarios and test the connectivity among virtual machines and the host, as all
             scenarios share the same "Net0" network.  

This file is part of the Virtual Networks over LinuX (VNX) Project distribution. 
(www: http://www.dit.upm.es/vnx - e-mail: vnx@dit.upm.es) 

Departamento de Ingenieria de Sistemas Telematicos (DIT)
Universidad Politecnica de Madrid
SPAIN

-->


<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-2.00.xsd">
  <global>
    <version>2.0</version>
    <scenario_name>simple_olive</scenario_name>
    <automac offset="13"/>
    <vm_mgmt type="none" />
    <olive_ext>simple_olive-olext.xml</olive_ext>
  </global>
    
  <net name="Net0" mode="virtual_bridge" />
      
  <!-- NODES -->
  <vm name="juniper" type="libvirt" subtype="kvm" os="olive">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_olive</filesystem>
    <mem>256M</mem>
    <conf>conf/juniper.conf</conf>
    <if id="1" net="Net0" name="fxp0">
      <ipv4>10.0.0.13/24</ipv4>
      <ipv6>2001:db8::13/64</ipv6>
    </if>
    <route type="ipv4" gw="10.0.0.1">default</route>

    <filetree seq="copyconfig2" root="/var/tmp">conf/</filetree>
    <filetree seq="copyconfig2" root="/var/tmp">conf/txtfile/</filetree>
    <exec seq="config1"       type="verbatim" mode="sdisk" ostype="load">override conf/juniper.conf</exec>
    <exec seq="configif"      type="verbatim" mode="sdisk" ostype="set">set interfaces fxp0 unit 0 family inet address 10.0.0.10/24</exec>
    <exec seq="enable-ssh"    type="verbatim" mode="sdisk" ostype="set">set system services ssh</exec>
    <exec seq="enable-telnet" type="verbatim" mode="sdisk" ostype="set">set system services telnet</exec>
    <exec seq="showint"       type="verbatim" mode="sdisk" ostype="show">show interfaces</exec>
    <exec seq="file"          type="file"     mode="sdisk">comandos/commands-file</exec>
  </vm>

  <host>
    <hostif net="Net0">
       <ipv4>10.0.0.1/24</ipv4>
    </hostif>
  </host>
  
</vnx>