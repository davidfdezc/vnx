#
#      my $grep = $bd->get_binaries_path_ref->{"grep"};
#      my $uml_mconsole = $bd->get_binaries_path_ref->{"uml_mconsole"};
#      my $result = `$uml_mconsole $mconsole help 2> /dev/null | $grep exec`;
#      if ($result ne "") {
#
