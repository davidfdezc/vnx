#   # Checking the kernel
#   my $kernel_check = 0;
#   my $kernel = $dh->get_default_kernel;
#   my $kernel_list = $vm->getElementsByTagName("kernel");
#   if ($kernel_list->getLength > 0) {
#      $kernel = &text_tag($kernel_list->item(0));
#
