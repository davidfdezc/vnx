#!/bin/bash

VNX_VERSION="0.15b-`date +%Y%m%d%H%M`"
OLIVE_VERSION="0.1b"  # -`date +%Y%m%d%H%M`"
ACEDLF_VERSION="0.1b"  # -`date +%Y%m%d%H%M`"
#ROOTFS_VERSION="es-v023b"
FNAME=vnx-${VNX_VERSION}

# Move to the upper directory where this script is
cdir=$( dirname $0 )
cd $cdir/..

echo "** "
echo "** Creating ${FNAME}.tgz file... "

mkdir -p distrib
mkdir -p tmp
rm -rf tmp/*
mkdir -p tmp/${FNAME}

#
# Create ACE tar files
#
mkdir -p tmp/aced
rm -rf tmp/aced/*
#
# Olive
#
mkdir -p tmp/aced/vnx-aced-olive-$OLIVE_VERSION
cp vnx-autoconf/open-source/olive/*  tmp/aced/vnx-aced-olive-$OLIVE_VERSION
cd tmp/aced
tar cfvz vnx-aced-olive-${OLIVE_VERSION}.tgz vnx-aced-olive-$OLIVE_VERSION
rm -rf vnx-aced-olive-$OLIVE_VERSION
cd ../..
#
# Windows
#
# TBP
#
# Linux & Freebsd
#
mkdir -p tmp/aced/vnx-aced-lf-$ACEDLF_VERSION
cp -r vnx-autoconf/open-source/freebsd vnx-autoconf/open-source/unix \
      vnx-autoconf/open-source/vnxdaemon.pl vnx-autoconf/open-source/install-vnxdaemon \
      tmp/aced/vnx-aced-lf-$ACEDLF_VERSION
cd tmp/aced
tar cfvz vnx-aced-lf-${ACEDLF_VERSION}.tgz vnx-aced-lf-$ACEDLF_VERSION
rm -rf vnx-aced-lf-$ACEDLF_VERSION
cd ../..


#
# Copy all the files to tmp/${FNAME} directory to buil the tar file from there 
#
cp -r vnx-folder/doc  \
      vnx-folder/etc  \
      vnx-folder/bin  \
      vnx-folder/perl-modules \
      vnx-folder/data \
      tmp/aced        \
      vnx-ediv/bin    \
      vnx-ediv/etc    \
      vnx-ediv/perl-modules \
      tmp/${FNAME}

#
# Change $release variable in vnx
#
RELDATE=$( date +%d/%m/%Y_%H:%M )
echo "** \$release=$RELDATE"
echo "** "
sed --in-place -e "s%DD/MM/YYYY%$RELDATE%" tmp/${FNAME}/bin/vnx
cp admin-scripts/install_vnx tmp/${FNAME}
mv tmp/${FNAME}/doc/00-readme.txt tmp/${FNAME}

#
# Create tar file and move it to distrib directory
#
cd tmp
tar cfvz  ${FNAME}.tgz ${FNAME}
mv ${FNAME}.tgz ../distrib
cd ../distrib
#
# Create a symbolic link named vnx-latest.tgz to the new version
# 
rm vnx-latest.tgz
ln -s ${FNAME}.tgz vnx-latest.tgz
# rm -rf tmp/*
echo "** "
echo "** ...done"
echo "** "
